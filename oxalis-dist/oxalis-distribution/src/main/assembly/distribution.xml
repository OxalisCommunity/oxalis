<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>distro</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- The output produced. Everybody can open .zip files  -->
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <fileSets>
        <!-- Sample configuration files -->
        <fileSet>
            <directory>../oxalis-distribution/src/main/resources</directory>
            <outputDirectory>etc</outputDirectory>
            <includes>
                <include>*.xml</include>
                <include>*.properties</include>
            </includes>
            <lineEnding>windows</lineEnding>
        </fileSet>

        <!-- Documentation -->
        <fileSet>
            <directory>../../doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>

        <!-- Shell scripts -->
        <fileSet>
            <directory>../oxalis-standalone/src/main/bash</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>

        <!-- SQL scripts -->
        <fileSet>
            <directory>../../oxalis-legacy/oxalis-statistics/src/main/resources/sql</directory>
            <outputDirectory>sql</outputDirectory>
            <includes>
                <include>*.sql</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>../oxalis-standalone/target</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>oxalis-standalone.jar</include>
            </includes>
        </fileSet>
    </fileSets>

    <moduleSets>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>network.oxalis:oxalis-war:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>jee</outputDirectory>
                <!-- No version name to ensure that the name of the web context is unchanged across versions -->
                <outputFileNameMapping>oxalis.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>network.oxalis:oxalis-outbound:*</include>
            </includes>
            <binaries>
                <includeDependencies>true</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>api</outputDirectory>
            </binaries>
        </moduleSet>

    </moduleSets>

</assembly>